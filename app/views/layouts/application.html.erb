<!DOCTYPE html>
<html>
<head>
  <title>NerdsWithoutWifi</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="left_column">
	<%= image_tag("pic.jpg", :class => "left_column_pic", :angle => 90) %>

	<p class="left_column_title">Trips Completed</p>
	<% if !@trips.nil? %>
	<% @count = 0 %>
	 <% @trips.each do |trip| %>
		<% @class = (Integer(params[:num]) == @count ? "orange_box" : "") %>
		<div>
	 	<div class="<%= @class %>"></div>
		<% @class = (Integer(params[:num]) == @count ? "left_column_trip_name selected" : "left_column_trip_name") %>
		<%= link_to trip.parkName, trip_path(:id => trip.id, :num => @count), class: @class %>
	</div>
		<% @count += 1 %>
      <% end %>
    <% end %>

    <p class="left_column_title">Next Trip</p>
    
    <!-- facebook like button
    <div
        class="fb-like"
        data-share="false"
        data-show-faces="true">
    </div>
