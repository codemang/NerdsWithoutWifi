    <% t = JSON.parse(tr) %>
    <% t.each do |ar| %>
    	<% ar.each do |el| %>
    		<%= el %>
    	<% end %><br>
    	<% end %>-->

</div>
<div class="right_column">
	<div class="top_column"></div>
	<div class="bottom_column">
	<%= yield %>
	</div>
</div>


</body>
</html>
